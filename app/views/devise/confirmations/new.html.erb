<div class="container login-page">
<h2 class="text-center">Resend confirmation instructions</h2>
<div id="login-popup">
<div class="modal-dialog">
  <div class="modal-header">
    <h4 class="modal-title">Resend confirmation</h4>
  </div>
  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-body">
<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <div class="row">
          <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="form-group">
              <label for="first">* Email</label>
				<%= f.text_field :email, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
              <span class="err-msg"><%= error_message(resource, :email) %></span>
            </div>
          </div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <%#= f.submit "Resend confirmation instructions", class: "btn btn-success txt16" %>
            <%- if controller_name != 'sessions' %>
			  <%= link_to "Log in", new_session_path(resource_name), class: "lightbtn txt16" %>
			<% end -%>
			
			<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
			  <%= link_to "Sign up", new_registration_path(resource_name), class: "lightbtn txt16" %>
			<% end -%>
	
			<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
			  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "lightbtn txt16" %>
			<% end -%>
          </div>
        </div>
<% end %>  

  </div>
</div>
</div>
</div>
